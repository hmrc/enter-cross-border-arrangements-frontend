{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/radios/macro.njk"        import govukRadios %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "unsubmitted-list/macro.njk"               import hmrcUnsubmittedList %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("unsubmitted.title"), form.errors) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back")
  }) }}
{% endblock %}

{% block mainContent %}
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-l">
          {{ messages("unsubmitted.heading", unsubmittedDisclosures.length, plural) }}
        </h1>

        <p class="govuk-body">{{ messages("unsubmitted.advice") }}</p>
        <a class="govuk-link" href="{{url}}">{{ messages("unsubmitted.link") }}</a>

        {{ hmrcUnsubmittedList({
            itemList: unsubmittedDisclosures,
            itemType: {
                singular: messages("updateTaxpayer.singular"),
                plural: messages("updateTaxpayer.plural")
            },
            emptyList: messages('updateTaxpayer.emptyList')
        }) }}

      </div>
    </div>
  </div>

{% endblock %}
