{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/radios/macro.njk"        import govukRadios %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages(pageTitle, country), form.errors) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back"),
     classes: "js-enabled"
  }) }}
{% endblock %}

{% block mainContent %}
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ routes.controllers.reporter.ReporterTinNonUKQuestionController.onSubmit(id, mode, index).url }}" method="post">

          {{ csrf() | safe }}

          {{ govukRadios({
            classes: "govuk-radios",
            name: 'value',
            fieldset: {
              legend: {
                text: messages(pageHeading, name, country),
                isPageHeading: true,
                classes: "govuk-fieldset__legend--l text-overflow"
              }
            },
            hint: {
                text: messages(hintText)
             },
            items: radios,
            errorMessage: form.value.error
          }) }}

          {{ govukButton({
            text: messages("site.saveAndContinue"),
            attributes: {"id": "submit"}
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
