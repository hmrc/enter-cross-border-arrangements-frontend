{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/radios/macro.njk"        import govukRadios %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("whyReportInUK.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ routes.controllers.reporter.intermediary.IntermediaryWhyReportInUKController.onSubmit(mode).url }}" method="post">
          <fieldset class="govuk-fieldset">

              {{ csrf() | safe }}

              <legend>
                  <h1 id="heading" class="govuk-heading-xl">
                      {{ messages("whyReportInUK.heading") }}
                  </h1>
             </legend>

              <p "id=reportInfo" class="govuk-body">{{ messages('whyReportInUK.info') }} </p>

              {{ govukRadios({
                name: 'value',
                hint: {
                  text: messages('whyReportInUK.hint')
                },
                items: radios,
                errorMessage: form.value.error
              }) }}

                {{ govukButton({
                    text: messages("site.saveAndContinue"),
                    attributes: {"id": "submit"}
                }) }}

            </fieldset>
        </form>

      </div>
    </div>
  </div>

{% endblock %}
