{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/radios/macro.njk"        import govukRadios %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages(pageTitle), form.errors) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back")
  }) }}
{% endblock %}

{% block mainContent %}
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ actionUrl }}" method="post">

          {{ csrf() | safe }}

          <fieldset class="govuk-fieldset">

              {{ govukRadios({
                fieldset: {
                  legend: {
                  text: messages('reporterIndividualEmailAddressQuestion.heading'),
                  isPageHeading: true,
                  classes: "govuk-fieldset__legend--l name-overflow"
                  }
                },
                hint: {
                 text: messages('reporterEmailAddressQuestion.guidance')
                 },
                classes: "govuk-radios name-overflow",
                name: 'value',
                items: radios,
                errorMessage: form.value.error
              }) }}

              {{ govukButton({
                text: messages("site.saveAndContinue"),
                attributes: {id:"submit"}
              }) }}

            </fieldset>
        </form>

      </div>
    </div>
  </div>

{% endblock %}
