{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/summary-list/macro.njk"  import govukSummaryList %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/button/macro.njk"        import govukButton %}

{% block pageTitle %}
  {{ title(messages("checkYourAnswers.title")) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back"),
     classes: "js-enabled"
  }) }}
{% endblock %}


{% block mainContent %}
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

          <form action="{{ routes.controllers.intermediaries.IntermediariesCheckYourAnswersController.onSubmit(id).url }}" method="post">


              {{ csrf() | safe }}

               <h1 class="govuk-heading-l">
                  {{ messages("checkYourAnswers.heading") }}
               </h1>

               {{ govukSummaryList({
                  classes: 'govuk-!-margin-bottom-0',
                  rows: intermediarySummary
               }) }}

               {{ govukSummaryList({
                  classes: 'govuk-summary-list__row--no-border',
                  rows: tinCountrySummary
               }) }}

               <hr>

              {{ govukSummaryList({
                  classes: 'govuk-!-margin-bottom-0',
                 rows: intermediarySummary2
              }) }}

               {{ csrf() | safe }}

                <div class="govuk-!-margin-top-9">
                    {{ govukButton({
                        text: messages("site.continue"),
                        preventDoubleClick: true,
                        attributes: {id:"submit"}
                    }) }}
                </div>

        </form>

      </div>
    </div>
  </div>

{% endblock %}
