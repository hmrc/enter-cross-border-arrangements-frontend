{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/summary-list/macro.njk"  import govukSummaryList %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/button/macro.njk"        import govukButton %}


{% block pageTitle %}
  {{ title(messages("checkYourAnswers.title")) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back")
  }) }}
{% endblock %}

{% block mainContent %}
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

       <h1 class="govuk-heading-xl">
          {{ messages("taxpayerscheckYourAnswers.heading") }}
       </h1>

       <form action="{{ routes.controllers.taxpayer.TaxpayersCheckYourAnswersController.onSubmit(id).url }}" method="post">

       {{ govukSummaryList({
          classes: 'govuk-!-margin-bottom-0',
          rows: taxpayersSummary
       }) }}

       {{ govukSummaryList({
          classes: 'govuk-summary-list--no-border',
          rows: countrySummary
       }) }}

        <hr>

      {{ govukSummaryList({
         classes: 'govuk-!-margin-bottom-0',
         rows: implementingDateSummary
      }) }}

       {{ csrf() | safe }}

        <div class="govuk-!-margin-top-9">
            {{ govukButton({
                text: messages("site.continue"),
                preventDoubleClick: true,
                attributes: {id:"submit"}
            }) }}
        </div>

        </form>

      </div>
    </div>
  </div>

{% endblock %}
