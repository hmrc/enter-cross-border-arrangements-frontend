{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/date-input/macro.njk"    import govukDateInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages(pageTitle), form.errors) }}
{% endblock %}

{% block beforeContent %}
  {{ govukBackLink({
    text: messages("site.back")
  }) }}
{% endblock %}

{% block mainContent %}
  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        {% set hintText = messages("implementingArrangementDate.part1.hint") + "<br><br>" + messages("implementingArrangementDate.part2.hint", exampleDate)%}

        <form action="{{ actionUrl }}" method="post" novalidate>


          {{ csrf() | safe }}

          <h1 class="govuk-heading-l text-overflow">{{ messages(pageHeading, name) }}</h1>

          {{ govukDateInput({
            fieldset: {
              legend: {
                text: messages(pageHeading, name),
                isPageHeading: false,
                classes: "govuk-fieldset__legend--xl govuk-visually-hidden text-overflow"
              }
            },
            hint: {
              html: hintText
            },
            errorMessage: date.error,
            items: date.items
          }) }}

          {{ govukButton({
                text: messages("site.saveAndContinue"),
                attributes: {"id": "submit"}
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
