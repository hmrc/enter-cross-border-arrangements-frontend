{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("whatAreTheTaxNumbersForUKIndividual.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ controllers.individual.routes.controllers.WhatAreTheTaxNumbersForUKIndividualController.onSubmit(mode, index).url }}" method="post">

          {{ csrf() | safe }}

          <h1 class="govuk-heading-xl govuk-!-margin-bottom-0 name-overflow">
            {{ messages("whatAreTheTaxNumbersForUKIndividual.heading", name) }}
          </h1>

          <div class="govuk-!-margin-bottom-6">
            <p class="govuk-hint">{{ messages("whatAreTheTaxNumbersForUKIndividual.hint") }}
              <a href="{{lostUTRUrl}}" class="govuk-link">{{ messages("whatAreTheTaxNumbersForUKIndividual.hintLink") }}</a>.
            </p>
          </div>

          {{ govukInput({
            label: {
              text: messages('whatAreTheTaxNumbersForUKIndividual.label1')
            },
            classes: "govuk-input--width-10",
            id: "firstTaxNumber",
            name: "firstTaxNumber",
            value: form.firstTaxNumber.value,
            errorMessage: form.firstTaxNumber.error
          }) }}

          {{ govukInput({
            label: {
              text: messages('whatAreTheTaxNumbersForUKIndividual.label2')
            },
            classes: "govuk-input--width-10",
            id: "secondTaxNumber",
            name: "secondTaxNumber",
            value: form.secondTaxNumber.value,
            errorMessage: form.secondTaxNumber.error
          }) }}

          {{ govukInput({
            label: {
              text: messages('whatAreTheTaxNumbersForUKIndividual.label3')
            },
            classes: "govuk-input--width-10",
            id: "thirdTaxNumber",
            name: "thirdTaxNumber",
            value: form.thirdTaxNumber.value,
            errorMessage: form.thirdTaxNumber.error
          }) }}

          {{ govukButton({
            text: messages("site.saveAndContinue"),
            attributes: {"id": "submit"}
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
